<div class="title-container">
    <h1>{{title}}</h1>
    <a href="/new"><button> Make a message!</button></a>
</div>


<div class="messages-wrapper">
    <div class="all-messages-container">
        {{#each messages}}
        <div class="message-container">
            <h3 class="message-user">
                {{this.user}}
            </h3>
            <p class="message-body">{{this.text}}</p>
            <p class="message-time">{{timeAgo this.added}}</p>

        </div>
        {{/each}}
    </div>
</div>

